                            <li class="user-footer">
                              <div class="pull-left">
                                <a href="#" class="btn btn-default btn-flat">Account</a>
                              </div>
                              <div class="pull-right">
                                <a {{action 'logout'}} href="#" class="btn btn-default btn-flat">Logout</a>
                              </div>
                            </li>
                          </ul>
